@model SistemaDeRestaurantes.ViewModels.BuscaViewModel
@{
    ViewBag.Title = "Busca";
}

<h2>Buscar Restaurante</h2>

@using (@Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Restaurante</legend>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeBusca)
            @Html.ValidationMessageFor(model=> model.NomeBusca)
        </div>

        <p>
            <input type="submit" value="Buscar"/>
        </p>

    </fieldset>
}

<p>@Html.ActionLink("Cancelar", "Index", "Restaurantes")</p>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


